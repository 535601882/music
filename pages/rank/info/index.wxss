/* pages/rank/info/index.wxss */
.rank-info-hd{
  height: 12.5rem;
  position: relative;
  overflow: hidden;
  display:flex;
  justify-content:center;
  align-items:center;

}
.rank-info-hd::after{
  content: '';
  width: 100%;
  height: 3.8rem;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,.3),rgba(0,0,0,0));
  position: absolute;
  bottom: 0;
  left: 0;
}